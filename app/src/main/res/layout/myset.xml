<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="13"
    tools:context="com.myclose.mymqtt.MySetsActivity" >

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/logomaggi1"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="0dp"
        android:background="#000000"
        android:src="@drawable/logo_myclose"
        android:layout_weight="2.17" />

    <Button
        android:id="@+id/topset"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_margin="0dp"
        android:layout_weight="2.17"
        android:background="@drawable/top_plan_eng_dark"
        android:onClick="onToggleTopClick"
        android:padding="10dp" />

    <Button
        android:id="@+id/basicset"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_margin="0dp"
        android:layout_weight="2.17"
        android:background="@drawable/standard_light"
        android:onClick="onToggleStandardClick"
        android:padding="10dp" />

    <Button
        android:id="@+id/customset"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        android:layout_weight="2.17"
        android:background="@drawable/custom_dark_eng"
        android:onClick="onToggleClickedCustom"
        android:padding="10dp" />

    <Button
        android:id="@+id/shutset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_weight="2.17"
        android:background="@drawable/shutset"
        android:onClick="onClickShutdown"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="2.17"
        android:background="#303b4a"
        android:orientation="horizontal"
        android:weightSum="9" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <Button
            android:id="@+id/menubottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/menubottom" />

    </LinearLayout>

</LinearLayout>