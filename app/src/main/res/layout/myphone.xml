<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="13" >

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/logomaggi1"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="0dp"
        android:background="#000000"
        android:src="@drawable/logo_myclose"
        android:layout_weight="3"/>

    <Button
        android:id="@+id/myphone"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        android:layout_weight="2"
        android:background="@drawable/my_numbers_eng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#959fa8"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/bcolor"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="#1C202A"
            android:onClick="onPickNumberButton" />

        <TextView
            android:id="@+id/number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onPickNumberButton"
            android:paddingBottom="10dp"
            android:text="NUMBER 1"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/telefonobotton"
            android:gravity="center"
            android:onClick="onPickNumberButton" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bcolornone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/oknumbert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#959fa8"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/bcolor1"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="#1C202A"
            android:onClick="onPickNumberButton" />

        <TextView
            android:id="@+id/number_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onPickNumberButton"
            android:paddingBottom="10dp"
            android:text="NUMBER 2"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/telefonobotton"
            android:gravity="center"
            android:onClick="onPickNumberButton" />

        <TextView
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bcolornone1"
