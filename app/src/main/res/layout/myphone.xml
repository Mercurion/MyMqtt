    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#405966"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/smslanguage"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:background="@drawable/textlanguage"
            android:onClick="onClickLanguage" />

        <Button
            android:id="@+id/bcolorsms"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.05"
            android:background="@drawable/buttonflageng"
            android:onClick="onClickLanguage" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#303b4a"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menubottom"
            android:layout_width="106dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="5dp"
            android:background="@drawable/menubottom"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>